<a-scene>
  <!-- Scene assets -->
  <a-assets>
    <div id="hello">
      <h2>Welcome!</h2> 
      <p>If this is your first time here, this is an experiment in VR Blogging, and one of the first blogs re-created in VR.</p> 
      <p>To go to any part of the site, just look in the portal. Look to your left or right to see the portals if you haven't already</p>
      <p>Once you're in the Lessons or Articles hallway, look at the images or book titles to visit those pages</p> 
      <p>Be sure to check back in the future as I have a lot of ideas for how it can be expanded :)</p> 
      <p>- Nat (@nateliason)</p>
    </div>
    <div id="Home" style="opacity: 0;">
      <h2 style="text-align: center; font-size: 72px;">Visit Nateliason.com</h2>
    </div>
    <h2 id="Lessons" style="text-align: center">Visit The Book Lessons</h2>
    <div id="Blog">
      <h2 style="text-align: center">Visit The Blog</h2>
    </div>
    <%= image_tag("Brick001.jpg", :id => "Brick-floor") %>
    <%= image_tag("WoodFloor002.jpg", :id =>"Wood-floor") %>
    <%= image_tag("Stone001.jpg", :id => "Stone-wall") %>
    <%= image_tag("sky1.jpg", :id => "sky") %>
    <%= image_tag("Sand001.jpg", :id => "Sand") %>
    <%= image_tag("twitter4.jpg", :id => "Twitter") %>
    <%= image_tag("BlogPortal.png", :id => "BlogPortal") %>
    <%= image_tag("ArticlesPortal.png", :id => "ArticlesPortal") %>
  </a-assets>
  
  <!-- Adding a camera that can "click" -->
  <a-entity camera
    universal-controls="movementControls: checkpoint"
    checkpoint-controls="mode: animate"
    position="0 4 0">
    <a-ring radius-outer="0.03" radius-inner="0.02"
      position="0 0 -1"
      material="color: cyan; shader: flat"
      cursor="fuse: true; fuseTimeout: 3000">
    </a-ring>
  </a-entity>
  
  <!-- The room for the links -->
  <a-entity position="0 0 0" name="Walkable Area">
    
    <!-- Sandy bottom -->
    <a-sphere position="0 0 0" scale="1 15 15" name="Floor" material="shader:standard;metalness:0;repeat:5 5;src:#Sand" geometry="primitive:sphere" rotation="0 0 90"></a-sphere>

    <!-- The Welcome message -->
    <a-entity geometry="primitive:box" position="0 3.35 -4" draw="width: 850; height: 1100" scale="3.375 4.5 .1" htmltexture="asset:#hello"></a-entity>
    
    <!-- The Home page -->
    <a-entity position="4 3.5 0">
      <!-- Floating text -->
      <a-entity bmfont-text="text:Site Home; color:FFF" position="0 2.3 -0.7" scale="1.5 1.5 0.1" rotation="0 -90 0"></a-entity>
      <!-- PORTALLL -->
      <a-cylinder position="0 0 0" scale="0.01 5 1.7" rotation="0 0 0" material="shader:standard; metalness:0; roughness:1; repeat:2 1; src:#BlogPortal; flatShading:false; opacity:1; transparent:true; side:front; visible:true; fog:true;" 
      href="http://www.nateliason.com"></a-cylinder>
    </a-entity>
    
    <!-- The Lessons page 
    <a-entity position="-2.5 2 0" rotation="0 180 0">
      <a-box position="0 1.44 0" scale="2 1 0.2" rotation="0 -90 0" name="Page (1)" material="shader:standard; metalness:0; repeat:1 1; src:#Wood-floor" geometry="primitive:box">
        <a-entity bmfont-text="text: Lessons; color: FFF;" position="-.2 0 .55" scale=".7 1 .7"></a-entity>
      </a-box>

      <a-cylinder position="0 0 0" scale="0.1 2 0.1" material="shader:standard; metalness:0; repeat:1 1; src:#Wood-floor" geometry="primitive:cylinder"></a-cylinder>

      <a-sphere position="0 1.41 2" scale="0.5 0.5 0.5" color="#FF0000" material="shader:standard;metalness:0;color:#FF0000" href="http://www.nateliason.com/lessons/" geometry="primitive:sphere"></a-sphere>
    </a-entity> -->
    
    <!-- Twitter
    <a-sphere position="2 3 -6" scale="0.5 0.5 0.5" rotation="0 -45 0" 
      material="shader:standard;metalness:0;repeat:1 1;src:#Twitter" 
      geometry="primitive:sphere" 
      href="http://www.twitter.com/nateliason">
    </a-sphere> -->

    <!-- Articles portal -->
    <a-entity position="0 3.5 4" rotation="0 270 0">
      <!-- Floating text -->
      <a-entity bmfont-text="text:Blog Articles; color:FFF" position="0 2.3 -0.9" scale="1.5 1.5 0.1" rotation="0 -90 0"></a-entity>
      <!-- PORTALLL -->
      <a-cylinder position="0 0 0" scale="0.01 5 1.7" rotation="0 0 0" material="shader:standard; metalness:0; roughness:1; repeat:2 1; src:#ArticlesPortal; flatShading:false; opacity:1; transparent:true; side:front; visible:true; fog:true;" 
      href="/posts/"></a-cylinder>
    </a-entity>

  </a-entity>

  <a-ocean width="200" depth="200" density="40" opacity="1" position="0 -0.4 0"></a-ocean>

  <a-sky src="#sky" position="0 -200 0"></a-sky> <!-- Thank you http://www.digitalafter.com/ for the sky! -->

  <a-light name="AmbientLight" type="ambient" color="#363942" intensity="1" position="0 2 0"></a-light>
  <a-light name="Centerlight" type="point" color="#FFFFFF" intensity=".8" position="0 10 0"></a-light>

</a-scene>